{
  "name": "@hidoo/gulp-project",
  "version": "0.0.0",
  "description": "This is the monorepo for gulp project packages.",
  "private": true,
  "packageManager": "yarn@1.22.19",
  "type": "module",
  "files": [],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "release:version": "node ./scripts/bumpVersion.js",
    "release:publish": "lerna publish from-git",
    "dev:test": "lerna exec 'yarn test --watch' --no-private",
    "dev:test:parallel": "yarn dev:test --parallel",
    "dev:generator": "lerna exec 'yarn start' --scope @hidoo/gulp-project-generator",
    "build": "npm-run-all -s build:doc build:examples",
    "build:doc": "lerna run doc --no-private",
    "build:examples": "npm-run-all -s build:examples:*",
    "build:examples:single-device": "lerna exec 'yarn generate ../../examples/single-device --no-interactive --force' --scope @hidoo/gulp-project-generator",
    "build:examples:multi-device": "lerna exec 'yarn generate ../../examples/multi-device --no-interactive --force --multi-device' --scope @hidoo/gulp-project-generator",
    "build:examples:sass": "lerna exec 'yarn generate ../../examples/use-sass --no-interactive --force --css-preprocessor sass' --scope @hidoo/gulp-project-generator",
    "postbuild": "yarn bootstrap",
    "test": "npm-run-all -s test:lint test:packages test:examples",
    "test:lint": "eslint .",
    "test:packages": "lerna run test --no-private",
    "test:examples": "cross-env NODE_ENV=test mocha",
    "install": "lerna bootstrap",
    "prepare": "husky install"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@hidoo/eslint-config": "0.7.0",
    "chalk": "4.1.1",
    "cross-env": "7.0.3",
    "eslint": "7.32.0",
    "glob": "7.1.7",
    "husky": "6.0.0",
    "lerna": "4.0.0",
    "lint-staged": "15.2.0",
    "mocha": "8.4.0",
    "npm-run-all": "4.1.5"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "dependencies": {}
}
