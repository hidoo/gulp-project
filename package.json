{
  "name": "@hidoo/gulp-project",
  "version": "0.0.0",
  "description": "gulp project monorepo.",
  "main": "index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev:test": "lerna exec 'npm test -- --watch' --ignore @hidoo/gulp-project-sample",
    "dev:test:parallel": "npm run dev:test -- --parallel",
    "dev:sample": "lerna exec 'npm start' --scope @hidoo/gulp-project-sample",
    "build": "npm-run-all -s build:packages",
    "build:packages": "lerna run build --ignore @hidoo/gulp-project-sample",
    "test": "npm-run-all -s test:lint test:packages",
    "test:lint": "eslint .",
    "test:packages": "lerna run test --ignore @hidoo/gulp-project-sample",
    "postinstall": "npm run bootstrap",
    "prepare": "npm-run-all -s build test"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@hidoo/eslint-config": "^0.1.1",
    "babel-eslint": "^9.0.0",
    "eslint": "^5.5.0",
    "husky": "^1.0.0-rc.13",
    "lerna": "^3.1.4",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint"
    ]
  }
}
