{
  "name": "@hidoo/gulp-project",
  "version": "0.0.0",
  "description": "This is the monorepo for gulp project packages.",
  "private": true,
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": "8.15.1"
  },
  "type": "module",
  "files": [],
  "scripts": {
    "build": "pnpm run --sequential '/^build:.*/'",
    "build:doc": "pnpm --recursive --if-present doc",
    "build:examples": "pnpm run --sequential '/^build:examples:.*/'",
    "build:examples:single-device": "pnpm --filter gulp-project-generator generate ../../examples/single-device --no-interactive --force",
    "build:examples:multi-device": "pnpm --filter gulp-project-generator generate ../../examples/multi-device --no-interactive --force --multi-device",
    "build:examples:sass": "pnpm --filter gulp-project-generator generate ../../examples/use-sass --no-interactive --force --css-preprocessor sass",
    "bootstrap": "pnpm install --frozen-lockfile",
    "dev:generate": "pnpm --filter gulp-project-generator start",
    "test": "pnpm run --sequential '/^test:.*/'",
    "test:lint": "eslint .",
    "test:packages": "pnpm --filter './packages/**' --if-present test",
    "test:examples": "cross-env NODE_ENV=test mocha",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "release:version": "node ./scripts/bumpVersion.js",
    "release:publish": "lerna publish from-git"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@hidoo/eslint-config": "1.0.0",
    "chalk": "5.3.0",
    "cross-env": "7.0.3",
    "eslint": "8.56.0",
    "glob": "10.3.10",
    "husky": "9.0.6",
    "lerna": "4.0.0",
    "lint-staged": "15.2.0",
    "mocha": "10.2.0"
  },
  "dependencies": {},
  "pnpm": {
    "overrides": {
      "stylelint-no-unsupported-browser-features": "7.0.0"
    }
  }
}
