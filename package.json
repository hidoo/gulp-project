{
  "name": "@hidoo/gulp-project",
  "version": "0.0.0",
  "description": "This is the monorepo for gulp project packages.",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "release:version": "node ./scripts/bumpVersion.js",
    "release:publish": "lerna publish from-git",
    "dev:test": "lerna exec 'npm test -- --watch' --no-private",
    "dev:test:parallel": "npm run dev:test -- --parallel",
    "dev:generator": "lerna exec 'npm start' --scope @hidoo/gulp-project-generator",
    "build": "npm-run-all -s build:packages build:examples",
    "build:packages": "lerna run build --no-private",
    "build:examples": "npm-run-all -s build:examples:*",
    "build:examples:single-device": "lerna exec 'npm run generate -- ../../examples/single-device --no-interactive --force' --scope @hidoo/gulp-project-generator",
    "build:examples:multi-device": "lerna exec 'npm run generate -- ../../examples/multi-device --no-interactive --force --multi-device' --scope @hidoo/gulp-project-generator",
    "postbuild": "npm run bootstrap",
    "test": "npm-run-all -s test:lint test:packages test:examples",
    "test:lint": "eslint .",
    "test:packages": "lerna run test --no-private",
    "test:examples": "cross-env NODE_ENV=test mocha",
    "install": "lerna bootstrap",
    "postinstall": "npm run build:packages"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@hidoo/eslint-config": "^0.1.3",
    "babel-eslint": "^10.0.2",
    "chalk": "^2.4.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "glob": "^7.1.4",
    "husky": "^2.4.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.6.1",
    "rimraf": "^2.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint"
    ]
  }
}
