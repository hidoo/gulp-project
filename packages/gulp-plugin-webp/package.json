{
  "name": "@hidoo/gulp-plugin-webp",
  "version": "0.18.0",
  "description": "Plugin that generate webp for gulp.",
  "engines": {
    "node": ">=10.0.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "prebuild": "rimraf ./lib",
    "build": "npm-run-all -p build:*",
    "build:lib": "babel ./src --out-dir ./lib",
    "build:doc": "documentation readme ./src/index.js -q -s API --markdown-toc false --document-exported",
    "test": "cross-env NODE_ENV=test mocha"
  },
  "keywords": [
    "gulp",
    "plugin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "hidoo",
  "license": "MIT",
  "dependencies": {
    "fancy-log": "1.3.3",
    "imagemin-webp": "6.0.0",
    "plugin-error": "1.0.1",
    "through2": "4.0.2",
    "vinyl": "2.2.1"
  },
  "devDependencies": {
    "@babel/cli": "7.13.14",
    "@babel/core": "7.13.14",
    "@babel/preset-env": "7.13.12",
    "@babel/register": "7.13.14",
    "babel-preset-power-assert": "3.0.0",
    "cross-env": "7.0.3",
    "documentation": "13.2.0",
    "mocha": "8.3.2",
    "npm-run-all": "4.1.5",
    "power-assert": "1.6.1",
    "rimraf": "3.0.2"
  },
  "peerDependencies": {
    "gulp": ">=4.0.2"
  }
}
