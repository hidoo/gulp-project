{
  "name": "@hidoo/gulp-project-generator",
  "version": "1.0.0-alpha.0",
  "description": "Command line tool that generate gulp project scaffold.",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "gulp-project-generator": "bin/index.js"
  },
  "files": [
    "bin/",
    "src/",
    "template/"
  ],
  "scripts": {
    "start": "pnpm generate ../../examples/dev --verbose --force",
    "generate": "cross-env NODE_ENV=development node ./src/index.js",
    "updateDepsVer": "node ./script/updateDepsVer.js",
    "test": "cross-env NODE_ENV=test mocha ./test/**/*.test.js"
  },
  "keywords": [
    "gulp",
    "scaffold"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "7.0.3",
    "mocha": "10.3.0"
  },
  "dependencies": {
    "@hidoo/handlebars-helpers": "0.8.2",
    "chalk": "5.3.0",
    "commander": "12.0.0",
    "glob": "10.3.10",
    "glob-parent": "6.0.2",
    "handlebars": "4.7.8",
    "inquirer": "9.2.15",
    "prettier": "3.2.5"
  }
}
