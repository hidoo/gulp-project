{
  "$schema": "https://json.schemastore.org/eslintrc.json",
  "root": true,
  "extends": [
    "@hidoo/eslint-config",
    "@hidoo/eslint-config/+babel"
  ],
  "rules": {
    "import/no-unresolved": ["error", {
      "ignore": [
        "^node:"
      ]
    }]
  },
  "overrides": [
    {
      "files": [
        "src/server/**/*.js",
        "task/**/*.js",
        "gulpfile.js"
      ],
      "extends": [
        "@hidoo/eslint-config/+node"
      ],
      "rules": {
        "node/file-extension-in-import": ["error", "always"]
      }
    {{#if this.js}}
    },
    {
      "files": [
        "**/*.spec.js",
        "**/*.test.js"
      ],
      "extends": [
        "@hidoo/eslint-config/+mocha",
        "@hidoo/eslint-config/+node"
      ],
      "rules": {
        "node/file-extension-in-import": ["error", "always"]
      }
    {{/if}}
    }
  ]
}
