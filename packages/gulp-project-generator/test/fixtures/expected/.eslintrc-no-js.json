{
  "$schema": "https://json.schemastore.org/eslintrc.json",
  "root": true,
  "extends": [
    "@hidoo/eslint-config",
    "@hidoo/eslint-config/+babel"
  ],
  "overrides": [
    {
      "files": [
        "src/server/**/*.js",
        "task/**/*.js",
        "gulpfile.js"
      ],
      "extends": [
        "@hidoo/eslint-config/+node"
      ],
      "rules": {
        "node/file-extension-in-import": [
          "error",
          "always"
        ]
      }
    }
  ]
}
