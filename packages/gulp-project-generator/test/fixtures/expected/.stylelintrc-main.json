{
  "$schema": "https://json.schemastore.org/stylelintrc.json",
  "extends": [
    "@hidoo/stylelint-config/scss"
  ],
  "rules": {
    "plugin/no-unsupported-browser-features": [
      true,
      {
        "browsers": [
          "> 0.25% in JP",
          "not dead"
        ],
        "ignore": [
          "text-size-adjust",
          "rem"
        ],
        "severity": "warning"
      }
    ]
  }
}
