.block-x-x-x {
}
.test-block {
  color: #000;
  background-color: #fff;
  box-shadow: rgba(0, 0, 0, 0.5) 3px 3px 0;

  background-image: url("http://cssnano.co/images/logo-alt.svg");

  *color: #600; // ie7-
  _color: #900; // ie6-

  &--modifier {
    border: 1px solid #ccc;
  }
  &__element {
    padding-top: 10px;
  }

  @media (min-width: 500px) and (max-width: 600px) {
    color: #fff;
    background-color: #000;
  }
}

if (NODE_ENV isnt 'development') {
  p('NODE_ENV is not "development"');
}
else {
  p('NODE_ENV is "development"');
}

.box {
    z-index: 300;
}

.box-overlay {
    z-index: 400;
}

@keyframes fadeOut {
    from { opacity: 1; }
    to   { opacity: 0; }
}
@keyframes dissolve {
    from { opacity: 1; }
    to   { opacity: 0; }
}
.fade {
    animation-name: fadeOut;
}
