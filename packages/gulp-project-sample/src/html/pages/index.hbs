## サイト共通のデータ

{{#each @root.site.meta}}{{#if @first}}
|変数名|現在の値|
|:--|:--|
{{/if}}
|{{@key}}|`{{this}}`|
{{/each}}
  {{/markdown}}

  {{!--
    Markdown のパースと、JSON への変換
  --}}
  {{#markdown}}
```json
{{{toJson @root.test.internetServices prettify=true}}}
```
  {{/markdown}}

  {{site.seo.title}}

  {{this.testdata.hoge}}

  {{this.testdata.json}}

  {{!--
    ループ
  --}}
  {{#each @root.test.internetServices}}
    {{#if @first}}
      <ul>
    {{/if}}

    <li>
      <a href="{{this.url}}">
        {{#ifModulo (add @index 1) 2 0}}★{{else}}☆{{/ifModulo}} {{this.label}}
      </a>
    </li>

    {{#if @last}}
      </ul>
    {{/if}}
  {{/each}}

  {{!--
    ソート
    + 'label' をキーにした昇順
  --}}
  {{#each (sortArray @root.test.internetServices order='ascend' key='label')}}
    {{#if @first}}
      <ul>
    {{/if}}

    <li>
      <a href="{{this.url}}">
        {{#ifModulo (add @index 1) 2 0}}★{{else}}☆{{/ifModulo}} {{this.label}}
      </a>
    </li>

    {{#if @last}}
      </ul>
    {{/if}}
  {{/each}}

  {{!--
    フィルタリング、かつ、ソート
    + 'type.sns' = true のもののみをフィルタ
    + 'label' をキーにした降順
  --}}
  {{#each (sortArray (filterArray @root.test.internetServices key='type.sns' value=true) order='descend' key='label')}}
    {{#if @first}}
      <ul>
    {{/if}}

    <li>
      <a href="{{this.url}}">
        {{#ifModulo (add @index 1) 2 0}}★{{else}}☆{{/ifModulo}} {{this.label}}
      </a>
    </li>

    {{#if @last}}
      </ul>
    {{/if}}
  {{/each}}

  {{> test}}

{{/content}}
{{/extend}}
