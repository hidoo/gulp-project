    "babel-preset-power-assert": "^3.0.0",
    "cross-env": "^5.2.0",
    "documentation": "^8.1.2",
    "gulp": "^4.0.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "power-assert": "^1.6.1",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "@hidoo/data-from": "^0.1.1",
