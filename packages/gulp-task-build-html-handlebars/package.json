{
  "name": "@hidoo/gulp-task-build-html-handlebars",
  "version": "0.6.1",
  "description": "Task that build html by handlebars for gulp.",
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "prebuild": "rimraf ./lib",
    "build": "npm-run-all -p build:*",
