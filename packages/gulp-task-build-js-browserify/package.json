{
  "name": "@hidoo/gulp-task-build-js-browserify",
  "version": "0.18.0",
  "description": "Task that build javascript by browserify for gulp.",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "prebuild": "rimraf ./lib",
    "build": "npm-run-all -p build:*",
    "build:lib": "babel ./src --out-dir ./lib",
    "build:doc": "documentation readme ./src/index.js -q -s API --markdown-toc false --document-exported",
    "test": "cross-env NODE_ENV=test mocha ./test/*.test.js --watch-ignore node_modules,.git,test/fixtures/dest"
  },
  "keywords": [
    "gulp",
    "task"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.14.3",
    "@babel/core": "7.14.3",
    "@babel/preset-env": "7.14.4",
    "@babel/register": "7.13.16",
    "babel-preset-power-assert": "3.0.0",
    "core-js": "3.10.0",
    "cross-env": "7.0.3",
    "documentation": "13.2.5",
    "gulp": "4.0.2",
    "mocha": "8.3.2",
    "npm-run-all": "4.1.5",
    "power-assert": "1.6.1",
    "regenerator-runtime": "0.13.7",
    "rimraf": "3.0.2"
  },
  "dependencies": {
    "@hidoo/gulp-util-error-handler": "^0.18.0",
    "@hidoo/util-merge-babelrc": "^0.18.0",
    "babelify": "9.0.0",
    "browserify": "13.3.0",
    "envify": "4.1.0",
    "gulp-gzip": "1.4.2",
    "gulp-if": "3.0.0",
    "gulp-rename": "2.0.0",
    "gulp-uglify": "3.0.2",
    "licensify": "3.1.3",
    "vinyl-buffer": "1.0.1",
    "vinyl-source-stream": "2.0.0"
  },
  "peerDependencies": {
    "gulp": ">=4.0.2"
  }
}
