{
  "name": "@hidoo/gulp-task-build-js-rollup",
  "version": "0.14.1",
  "description": "Task that build javascript by rollup.js for gulp.",
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "prebuild": "rimraf ./lib",
    "build": "npm-run-all -p build:*",
    "build:lib": "babel ./src --out-dir ./lib",
    "build:doc": "documentation readme ./src/index.js -q -s API --markdown-toc false --document-exported",
    "test": "cross-env NODE_ENV=test mocha ./test/*.test.js"
  },
  "keywords": [
    "gulp",
    "task"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.7.4",
    "@babel/core": "7.7.2",
    "@babel/preset-env": "7.7.1",
    "@babel/register": "7.7.0",
    "babel-preset-power-assert": "3.0.0",
    "core-js": "3.4.5",
    "cross-env": "6.0.3",
    "documentation": "12.1.4",
    "gulp": "4.0.2",
    "mocha": "6.2.2",
    "npm-run-all": "4.1.5",
    "power-assert": "1.6.1",
    "regenerator-runtime": "0.13.3",
    "rimraf": "3.0.0"
  },
  "dependencies": {
    "@hidoo/gulp-util-error-handler": "^0.14.1",
    "@hidoo/util-merge-babelrc": "^0.14.1",
    "@rollup/plugin-replace": "2.2.1",
    "fancy-log": "1.3.3",
    "gulp-gzip": "1.4.2",
    "gulp-if": "3.0.0",
    "gulp-rename": "1.4.0",
    "gulp-uglify": "3.0.2",
    "rollup": "1.27.5",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-license": "0.12.1",
    "rollup-plugin-node-resolve": "5.2.0",
    "through2": "3.0.1",
    "vinyl-buffer": "1.0.1",
    "vinyl-source-stream": "2.0.0"
  },
  "peerDependencies": {
    "gulp": ">=4.0.2"
  }
}
