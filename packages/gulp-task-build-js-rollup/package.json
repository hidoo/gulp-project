{
  "name": "@hidoo/gulp-task-build-js-rollup",
  "version": "0.8.2",
  "description": "Task that build javascript by rollup.js for gulp.",
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "prebuild": "rimraf ./lib",
    "build": "npm-run-all -p build:*",
    "build:lib": "babel ./src --out-dir ./lib",
    "build:doc": "documentation readme ./src/index.js -q -s API --markdown-toc false --document-exported",
    "test": "cross-env NODE_ENV=test mocha ./test/*.test.js"
  },
  "keywords": [
    "gulp",
    "task"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/polyfill": "^7.4.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "babel-preset-power-assert": "^3.0.0",
    "cross-env": "^5.2.0",
    "documentation": "^9.3.1",
    "gulp": "^4.0.0",
    "mocha": "^6.0.2",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.6.1",
    "rimraf": "^2.6.3"
  },
  "dependencies": {
    "@hidoo/gulp-util-error-handler": "^0.8.2",
    "@hidoo/util-merge-babelrc": "^0.8.2",
    "fancy-log": "^1.3.3",
    "gulp-gzip": "^1.4.2",
    "gulp-if": "^2.0.2",
    "gulp-rename": "^1.4.0",
    "gulp-uglify": "^3.0.1",
    "rollup": "^1.7.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.2",
    "rollup-plugin-license": "^0.8.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-replace": "^2.1.0",
    "through2": "^3.0.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "peerDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.4",
    "gulp": "^4.0.0"
  }
}
