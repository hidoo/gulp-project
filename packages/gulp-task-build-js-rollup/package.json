{
  "name": "@hidoo/gulp-task-build-js-rollup",
  "version": "0.19.0",
  "description": "Task that build javascript by rollup.js for gulp.",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "prebuild": "rimraf ./lib",
    "build": "npm-run-all -p build:*",
    "build:lib": "babel ./src --out-dir ./lib",
    "build:doc": "documentation readme ./src/index.js -q -s API --markdown-toc false --document-exported",
    "test": "cross-env NODE_ENV=test mocha ./test/*.test.js --watch-ignore node_modules,.git,test/fixtures/dest"
  },
  "keywords": [
    "gulp",
    "task"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.14.5",
    "@babel/core": "7.14.3",
    "@babel/preset-env": "7.14.4",
    "@babel/preset-react": "7.14.5",
    "@babel/register": "7.13.16",
    "babel-preset-power-assert": "3.0.0",
    "core-js": "3.14.0",
    "cross-env": "7.0.3",
    "documentation": "13.2.5",
    "gulp": "4.0.2",
    "mocha": "8.4.0",
    "npm-run-all": "4.1.5",
    "power-assert": "1.6.1",
    "regenerator-runtime": "0.13.7",
    "rimraf": "3.0.2"
  },
  "dependencies": {
    "@hidoo/gulp-util-error-handler": "^0.19.0",
    "@hidoo/util-merge-babelrc": "^0.19.0",
    "@rollup/plugin-alias": "3.1.2",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "19.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.0",
    "@rollup/plugin-replace": "2.4.2",
    "fancy-log": "1.3.3",
    "gulp-gzip": "1.4.2",
    "gulp-if": "3.0.0",
    "gulp-rename": "2.0.0",
    "gulp-terser": "2.0.1",
    "rollup": "2.52.7",
    "rollup-plugin-license": "2.5.0",
    "through2": "4.0.2",
    "vinyl": "2.2.1"
  },
  "peerDependencies": {
    "gulp": ">=4.0.2"
  }
}
