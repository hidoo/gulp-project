{
  "name": "@hidoo/gulp-task-build-js-rollup",
  "version": "0.15.0",
  "description": "Task that build javascript by rollup.js for gulp.",
  "engines": {
    "node": ">=10.0.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "prebuild": "rimraf ./lib",
    "build": "npm-run-all -p build:*",
    "build:lib": "babel ./src --out-dir ./lib",
    "build:doc": "documentation readme ./src/index.js -q -s API --markdown-toc false --document-exported",
    "test": "cross-env NODE_ENV=test mocha ./test/*.test.js --watch-ignore node_modules,.git,test/fixtures/dest"
  },
  "keywords": [
    "gulp",
    "task"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-react": "7.9.4",
    "@babel/register": "7.9.0",
    "babel-preset-power-assert": "3.0.0",
    "core-js": "3.6.4",
    "cross-env": "7.0.2",
    "documentation": "12.3.0",
    "gulp": "4.0.2",
    "mocha": "7.1.1",
    "npm-run-all": "4.1.5",
    "power-assert": "1.6.1",
    "regenerator-runtime": "0.13.5",
    "rimraf": "3.0.2"
  },
  "dependencies": {
    "@hidoo/gulp-util-error-handler": "^0.15.0",
    "@hidoo/util-merge-babelrc": "^0.15.0",
    "@rollup/plugin-alias": "3.1.0",
    "@rollup/plugin-commonjs": "11.1.0",
    "@rollup/plugin-json": "4.0.3",
    "@rollup/plugin-node-resolve": "7.1.3",
    "@rollup/plugin-replace": "2.3.2",
    "fancy-log": "1.3.3",
    "gulp-gzip": "1.4.2",
    "gulp-if": "3.0.0",
    "gulp-rename": "2.0.0",
    "gulp-uglify": "3.0.2",
    "rollup": "2.7.2",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-license": "2.0.0",
    "through2": "3.0.1",
    "vinyl-buffer": "1.0.1",
    "vinyl-source-stream": "2.0.0"
  },
  "peerDependencies": {
    "gulp": ">=4.0.2"
  }
}
