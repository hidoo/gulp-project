{
  "name": "@hidoo/gulp-task-build-styleguide-kss",
  "version": "0.18.0",
  "description": "Task that build styleguide by kss for gulp.",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/",
    "builder/"
  ],
  "scripts": {
    "prebuild": "rimraf ./lib",
    "build": "npm-run-all -p build:*",
    "build:lib": "babel ./src --out-dir ./lib",
    "build:doc": "documentation readme ./src/index.js -q -s API --markdown-toc false --document-exported",
    "test": "cross-env NODE_ENV=test mocha"
  },
  "keywords": [
    "gulp",
    "task"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.14.3",
    "@babel/core": "7.14.3",
    "@babel/preset-env": "7.14.4",
    "@babel/register": "7.13.16",
    "babel-preset-power-assert": "3.0.0",
    "cross-env": "7.0.3",
    "documentation": "13.2.5",
    "gulp": "4.0.2",
    "mocha": "8.3.2",
    "npm-run-all": "4.1.5",
    "power-assert": "1.6.1",
    "rimraf": "3.0.2"
  },
  "dependencies": {
    "@hidoo/gulp-util-error-handler": "^0.18.0",
    "@hidoo/handlebars-helpers": "0.8.1",
    "handlebars": "4.7.7",
    "kss": "3.0.1"
  },
  "peerDependencies": {
    "gulp": ">=4.0.2"
  }
}
