{
  "name": "@hidoo/gulp-task-copy",
  "version": "0.19.0",
  "description": "Task that copy files for gulp.",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "prebuild": "rimraf ./lib",
    "build": "npm-run-all -p build:*",
    "build:lib": "babel ./src --out-dir ./lib",
    "build:doc": "documentation readme ./src/index.js -q -s API --markdown-toc false --document-exported",
    "test": "cross-env NODE_ENV=test mocha ./test/*.test.js"
  },
  "keywords": [
    "gulp",
    "task"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.16.8",
    "@babel/core": "7.23.9",
    "@babel/preset-env": "7.23.9",
    "@babel/register": "7.23.7",
    "babel-preset-power-assert": "3.0.0",
    "cross-env": "7.0.3",
    "documentation": "13.2.5",
    "gulp": "4.0.2",
    "mocha": "8.4.0",
    "npm-run-all": "4.1.5",
    "power-assert": "1.6.1",
    "rimraf": "3.0.2"
  },
  "dependencies": {
    "@hidoo/gulp-util-error-handler": "^0.19.0",
    "gulp-plumber": "1.2.1"
  },
  "peerDependencies": {
    "gulp": ">=4.0.2"
  }
}
