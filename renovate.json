{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:earlyMondays",
    ":automergeMinor",
    ":automergePr",
    ":maintainLockFilesMonthly",
    ":pinAllExceptPeerDependencies",
    ":timezone(Asia/Tokyo)"
  ],
  "labels": ["renovate"],
  "ignorePaths": [
    "packages/gulp-project-generator/test/fixtures/expected/**",
    "packages/gulp-task-build-styleguide-kss/builder/**",
    "packages/gulp-task-build-styleguide-kss/test/fixtures/expected/**/*.html"
  ],
  "npm": {
    "packageRules": [
      {
        "groupName": "lerna-lite monorepo",
        "matchPackagePatterns": ["^@lerna-lite/"]
      },
      {
        "groupName": "ndarray packages",
        "matchPackageNames": ["ndarray", "get-pixels", "save-pixels"]
      }
    ]
  }
}
